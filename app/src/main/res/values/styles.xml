<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeSplash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@mipmap/splash</item>
    </style>

    <style name="text">
        <item name="android:textColor">@color/text</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="textMini" parent="text">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="textSmall" parent="text">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textMedium" parent="text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textLarge" parent="text">
        <item name="android:textSize">18sp</item>
    </style>

    <color name="text">#32323d</color>
</resources>
