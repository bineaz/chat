<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


    <ImageView
        android:id="@+id/chat_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        android:src="@mipmap/icon"/>

    <ImageView
        android:id="@+id/chat_fileImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@id/chat_avatar"
        android:layout_toRightOf="@id/chat_avatar"
        android:src="@mipmap/file"/>

    <ImageView
        android:id="@+id/chat_downloadImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@id/chat_fileImageView"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/chat_fileImageView"
        android:src="@mipmap/download"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/chat_fileNameTextView"
        style="@style/textSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/chat_fileImageView"
        android:layout_below="@id/chat_fileImageView"
        android:layout_marginTop="2dp"
        android:ellipsize="middle"
        android:maxWidth="220dp"
        android:singleLine="true"/>

    <ProgressBar
        android:id="@+id/chat_loadProgressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="120dp"
        android:layout_height="10dp"
        android:layout_alignLeft="@id/chat_fileNameTextView"
        android:layout_below="@id/chat_fileNameTextView"
        android:layout_marginTop="5dp"
        android:visibility="gone"/>


    <ProgressBar
        android:id="@+id/chat_progressBar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@id/chat_fileNameTextView"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/chat_fileNameTextView"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/chat_resendImageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@id/chat_fileImageView"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/chat_fileImageView"
        android:src="@mipmap/retry"
        android:visibility="gone"/>
</RelativeLayout>